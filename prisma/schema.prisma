generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  name        String
  title       String
  bio         String
  avatarUrl   String
  skills      Skill[]
  socialLinks SocialLink[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Skill {
  id     String @id @default(uuid())
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model SocialLink {
  id       String @id @default(uuid())
  platform String
  url      String
  user     User   @relation(fields: [userId], references: [id])
  userId   String
}
