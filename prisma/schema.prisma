datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // uses Neon DB
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  title      String
  bio        String
  avatarUrl  String
  skills     Skill[]
  socialLinks SocialLink[]
}

model Skill {
  id     Int    @id @default(autoincrement())
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model SocialLink {
  id     Int    @id @default(autoincrement())
  name   String
  url    String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}
